# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "disk /"
order += "disk /var"
order += "disk /home"
order += "ipv6"
order += "run_watch DHCP"
order += "run_watch VPN"
order += "ethernet eth0"
order += "memory"
order += "cpu_usage"
order += "volume master"
order += "tztime local"

cpu_usage {
    format= "cpu: %usage"
#	interval = 3
}
memory {
    format= "ram: %used"
}

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip"
        format_down = "E: down"
}

volume master {
	format = "vol: %volume"
	format_muted = "Vol: muted (%volume)"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "%Y-%m-%d %I:%M:%S %p"
}

disk "/" {
        format = "/: %avail"
}
disk "/var" {
        format = "/var: %avail"
}
disk "/home" {
        format = "/home: %avail"
}
